{% extends base_template %}

{% block show %}
        <link href="{{ asset('bundles/comoformbuilder/assets/css/custom.css') }}" rel="stylesheet">
            <div class="container">
                <div class="row clearfix">
                    <!-- Building Form. -->
                    <div class="span6">
                        <div class="clearfix">
                            <h2>Form</h2>
                            <hr>
                            <div id="build">
                                <form id="target" class="form-horizontal">
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- / Building Form. -->

                    <!-- Components -->
                    <div class="span6">
                        <h2>Form Types</h2>
                        <hr>
                        <div class="tabbable">
                            <ul class="nav nav-tabs" id="formtabs">
                                <!-- Tab nav -->
                            </ul>
                            <form class="form-horizontal" id="components">
                                <fieldset>
                                    <div class="tab-content">
                                        <!-- Tabs of snippets go here -->
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    <!-- / Components -->
                </div>
            </div>
            <script data-main="{{ asset('bundles/comoformbuilder/assets/js/main-built.js') }}" src="{{ asset('bundles/comoformbuilder/assets/js/lib/require.js') }}" ></script>
{% endblock %}
